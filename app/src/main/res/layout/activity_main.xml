<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.xiaox.goline2.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f4f4f4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/toolbarlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.AppBarOverlay">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?attr/colorPrimary"
                        app:popupTheme="@style/AppTheme.PopupOverlay" />
                </android.support.design.widget.AppBarLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="400">

                <android.support.design.widget.CoordinatorLayout
                    android:id="@+id/logViewRoot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/debugTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Console"
                            android:textAlignment="center"
                            android:textSize="24dp" />

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/homeLogTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </ScrollView>
                    </LinearLayout>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|start"
                        android:layout_margin="@dimen/fab_margin"
                        android:src="@android:drawable/stat_notify_chat" />
                </android.support.design.widget.CoordinatorLayout>

                <com.example.xiaox.goline2.extension.view.Ellipse
                    android:id="@+id/strokeEllipse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="80dp"
                    android:visibility="gone" />

                <com.example.xiaox.goline2.extension.view.Ellipse
                    android:id="@+id/strokeRedEllipse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="80dp"
                    android:visibility="gone" />

                <com.example.xiaox.goline2.extension.view.TextCircle
                    android:id="@+id/textCircle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="80dp"
                    android:gravity="center"
                    android:text="Start"
                    android:textAlignment="center"
                    android:textSize="36dp"
                    android:visibility="gone" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimary"
                    android:minHeight="40dp"></FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="GO-LINE2"
                        android:textSize="40dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="90dp"
                        android:text="||||||||||||||||||||||||||||||||||||||||||||||" />

                    <TextView
                        android:id="@+id/playTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="play"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="7dp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="SFX" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.example.xiaox.goline2.extension.view.SwitchView
                            android:id="@+id/sfxSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:isOpened="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="BGM" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.example.xiaox.goline2.extension.view.SwitchView
                            android:id="@+id/bgmSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:isOpened="false" />
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:text="\@Copyright2017-Epxoxy" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="96dp"
            android:layout_gravity="right|top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="LOG" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.example.xiaox.goline2.extension.view.SwitchView
                android:id="@+id/logSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:isOpened="false" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="WELCOME"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:textSize="30dp" />
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/activity_drawer_drawer" />
</android.support.v4.widget.DrawerLayout>
